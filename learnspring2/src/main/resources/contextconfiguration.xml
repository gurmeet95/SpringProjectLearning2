<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->
        <bean id="name" class="java.lang.String">
        <constructor-arg value="Gurmeet"/>
        </bean>
        <bean id="age" class="java.lang.Integer">
        <constructor-arg value="35"/>
        </bean>
      <!--  <context:component-scan base-package="com.newSpringcourse.learnspring.game"></context:component-scan>
      ALternate of this is defining bean with name here only.
      
      -->
      <bean id="game" class="com.newSpringcourse.learnspring.game.PacMan"/>
      <bean id="gameRunner" class="com.newSpringcourse.learnspring.game.GameRunner">
      <constructor-arg ref="game"/>
        </bean>
</beans>